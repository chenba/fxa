FROM node:12-alpine

# To handle 'not get uid/gid'
RUN npm config set unsafe-perm true

RUN npm install -g npm@6 && rm -rf ~app/.npm /tmp/*

RUN apk add --no-cache git make gcc g++

RUN addgroup -g 10001 app && \
    adduser -D -G app -h /app -u 10001 app
USER app

COPY --chown=app:app fxa-shared ../fxa-shared
WORKDIR /fxa-shared
RUN npm ci

WORKDIR /app

COPY fxa-support-panel/package.json package.json
COPY fxa-support-panel/package-lock.json package-lock.json

RUN npm ci && rm -rf ~app/.npm /tmp/*

COPY --chown=app:app fxa-support-panel /app
RUN npm run build

USER root
RUN chown app:app /app/config

USER app
